<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D4FA"
    tools:context=".Registration">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lexend_deca"
            android:text="Register Yourself"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Fullname"
            android:includeFontPadding="true"
            android:inputType="textEmailAddress"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tuname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tname"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Phone Number"
            android:includeFontPadding="true"
            android:inputType="phone"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tuname"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Email"
            android:includeFontPadding="true"
            android:inputType="textEmailAddress"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tmail"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Password"
            android:includeFontPadding="true"
            android:inputType="textPassword"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tcpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tpass"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Confirm Password"
            android:includeFontPadding="true"
            android:inputType="textPassword"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/rgstrb"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/genderpicker"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#EA458F"
            android:fontFamily="@font/lexend_deca"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="#FFFCFC"
            android:textSize="16sp"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/genderpicker"
            android:layout_below="@+id/tcpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_custom"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbutton1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background_custom"
                android:fontFamily="@font/lexend_deca"
                android:onClick="onRadioButtonClicked"
                android:text="Male"
                android:textColor="#373737"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbutton2"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:background="@drawable/background_custom"
                android:fontFamily="@font/lexend_deca"
                android:onClick="onRadioButtonClicked"
                android:text="Female"
                android:textColor="#373737"
                android:textSize="15sp" />
        </RadioGroup>

    </RelativeLayout>


</ScrollView>