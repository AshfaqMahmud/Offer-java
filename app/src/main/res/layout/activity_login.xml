<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2C2D2E"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <RelativeLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/loginimg" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lexend_deca"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Email"
            android:includeFontPadding="true"
            android:inputType="textEmailAddress"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/tpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tmail"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Password"
            android:includeFontPadding="true"
            android:inputType="textPassword"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#80000000"
            android:textSize="16sp" />


        <Button
            android:id="@+id/rgstrb"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tpass"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#304FFE"
            android:fontFamily="@font/lexend_deca"
            android:padding="10dp"
            android:text="Login"
            android:textColor="#FFFCFC"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bbottom"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/rgstrb"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#00C853"
            android:fontFamily="@font/lexend_deca"
            android:padding="10dp"
            android:text="New Here? Sign Up"
            android:textColor="#FFFCFC"
            android:textSize="16sp"
            android:textStyle="bold" />



    </RelativeLayout>


</ScrollView>